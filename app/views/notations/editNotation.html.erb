<%= stylesheet_link_tag "evaluation" %>
<p style="display:none" id="mydata"><%= @ge_formats.to_json %></p>

<div class="bandeauSuperieur d-flex justify-content-center">
  <span class="mx-4 uppercase font-bold">Edition de l'espace de notation</span>
</div>

<form method="post">
  <div class="m-4 pt-3">
    <div class="section">
      <div class="block">
        <div class="sous-titre">
          <span class="uppercase font-bold text-darkgrey">Etudiant</span>
        </div>
        <div class="d-flex flex-column align-items-start">
          <div class="my-2 px-3">
            <button class="btn-close" type="button" aria-label="Close"></button>
            <input class="formInput text-mediumblue" type="text" value="Nom du stagiaire" > <br/>
          </div>
          <div class="my-2 px-3">
            <button class="btn-close" type="button" aria-label="Close"></button>
            <input class="formInput text-mediumblue" type="text" value="Promotion" > <br/>
          </div>
          <div class="my-2 px-3">
            <button class="btn-close" type="button" aria-label="Close"></button>
            <input class="formInput text-mediumblue" type="text" value="Entreprise" > <br/>
          </div>
        </div>
        <button type="button" class="btn btn-round btn-sm px-3 mt-2" id="add_label_button" style="float:right">+ Ajouter un libell√©</button>
      </div>
    </div>

    <div class="section">
      <div class="block">
        <div class="sous-titre">
          <span class="uppercase font-bold text-darkgrey">Note de l'entreprise</span>
        </div>

        <table class="table">
          <thead>
          <tr>

            <% @data['bareme'].each_with_index { |valueData, indexData|%>

              <th class="text-center text-mediumblue font-normal">
                <button class="btn-close" type="button" aria-label="Close"></button>
                <textarea class="form-control text-center text-mediumblue font-normal" id="exampleFormControlTextarea5" rows="6">
                  <%= valueData['libelle'] %>
                </textarea>
              </th>

            <% } %>

          </tr>
          </thead>

          <tbody>

          <tr>

            <% @data['bareme'].each_with_index { |valueData, indexData|%>

              <td class="text-center">
                <input id="<%= indexData %>" type="radio" name="note">
              </td>

            <% } %>

          </tr>
          </tbody>
        </table>
      <button type="button" class="btn btn-round btn-sm px-3 mt-2" id="add_label_button" style="float:right">+ Ajouter un choix</button>
      </div>
    </div>
    <div class="section">
      <div class="block">
        <div class="sous-titre-com">
          <div>
            <span class="uppercase font-bold text-darkgrey" style="float: left">Espace de commentaire</span>
            <div class="form-check form-switch">
              <input class="form-check-input toggle" type="checkbox" id="commentaire"/>
            </div>
          </div>
        </div>
        <div class="d-flex">
          <textarea class="form-control" id="exampleFormControlTextarea5" rows="3" disabled></textarea>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center py-2 pb-4">
    <button type="submit" class="btn btn-round">Soumettre</button>
  </div>
</form>
